@model MyAccountingBook.Models.ViewModels.keepBooksViewModels
@using MyAccountingBook.Models.ViewModels
@{
    ViewBag.Title = "KeepBooksChildAction";
    Layout = null;
    //IEnumerable<SelectListItem> InOut =
    //    (IEnumerable<SelectListItem>)ViewData["InOut"];
    
}


@using (Html.BeginForm())
{
    @*@Html.AntiForgeryToken()*@
    <div class="container body-content">
        <div class="well">
            <div class="form-horizontal">
                <hr />
                @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
                <div class="form-group">                    
                    <label class="control-label col-sm-2">
                        @*類別：*@
                        @Html.DisplayNameFor(m => m.InOut)
                    </label>
                    <div class="col-sm-10">
                        @*@Html.DropDownListFor(model => model.InOut, InOut, new { @class = "form-control" })*@                        

                        @*以下三種寫法為抓取ViewModel中Enum資料當作下拉式選單內容*@
                        @*@Html.DropDownListFor(moedl => moedl.InOut, Enum.GetValues(typeof(InOutList)).Cast<InOutList>().Select(model => new SelectListItem { Text = model.ToString(), Value = model.ToString() }), new { @class = "form-control" })*@
                        @*@Html.DropDownList("InOut", new SelectList(Enum.GetValues(typeof(InOutList))), "請選擇", new { @class = "form-control" })*@
                        @Html.EnumDropDownListFor(model => model.InOut, "請選擇", new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="Amount">
                        @*金額：*@
                        @Html.DisplayNameFor(m => m.Amount)
                    </label>
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", @placeholder = "金額" } })                        
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">
                        @*日期：*@
                        @Html.DisplayNameFor(m => m.Date)
                    </label>
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @placeholder = "日期" } })                        
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">
                        @*備註：*@
                        @Html.DisplayNameFor(m => m.Memo)
                    </label>
                    <div class="col-sm-10">
                        @Html.TextAreaFor(model => model.Memo, new { @class = "form-control" })                        
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-8 col-sm-4">
                        <input type="submit" value="送出" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
